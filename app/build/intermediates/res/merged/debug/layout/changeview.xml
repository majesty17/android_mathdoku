<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <ScrollView android:id="@+id/aboutscrollview"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">
            <TextView android:text="@string/menu_changes"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView android:text="@string/in_english"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:paddingBottom="15px"
                android:visibility="@integer/in_english_visibility"
            />
            <TextView android:text="v1.0: Initial version."
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                 />
            <TextView android:text="@string/changelog_bugs_features_title"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15px"
                android:paddingLeft="15px"
                android:textStyle="bold"
                android:textSize="18sp" />
            <TextView
                android:text="@string/changelog_bugs_features"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15px"
                android:autoLink="web"
            />
        </LinearLayout>
    </ScrollView>
</LinearLayout>
